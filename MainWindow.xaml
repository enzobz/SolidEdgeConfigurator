<Window x:Class="SolidEdgeConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solid Edge Configurator" Height="650" Width="900"
        Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Configuration Controls -->
        <StackPanel Grid.Column="0" Margin="15" Background="White" Orientation="Vertical">
            <TextBlock Text="Configurator" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Manage Parts Button -->
            <Button Content="Manage Parts Database" Click="OpenPartsManagement_Click" Height="50" Margin="0,0,0,15" Background="#9C27B0" Foreground="White" FontWeight="Bold" FontSize="13"/>

            <!-- Show/Hide Solid Edge Button -->
            <Button x:Name="ToggleSolidEdgeButton" Content="Show Solid Edge" Click="ToggleSolidEdge_Click" Height="40" Margin="0,0,0,15" Background="#FF9800" Foreground="White" FontWeight="Bold"/>

            <!-- Load Assembly Section -->
            <GroupBox Header="1. Load Assembly" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <TextBlock Text="Template File:" Margin="0,0,0,5"/>
                    <TextBox x:Name="AssemblyPathTextBox" Height="30" Padding="5" IsReadOnly="True" Background="#F0F0F0"/>
                    <Button Content="Browse Template..." Click="BrowseAssembliesButton_Click" Height="35" Margin="0,10,0,0" Background="#0066CC" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </GroupBox>

            <!-- Configuration Section -->
            <GroupBox Header="2. Configure Components" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <TextBlock Text="Available Components:" Margin="0,0,0,5"/>
                    <ListBox x:Name="ComponentListBox" Height="150" Margin="0,0,0,10" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" SelectionChanged="ComponentSelectionChanged"/>
                    
                    <TextBlock Text="Selected Component:" Margin="0,10,0,5"/>
                    <TextBox x:Name="SelectedComponentText" Height="25" Padding="5" IsReadOnly="True" Background="#F0F0F0"/>
                    
                    <CheckBox x:Name="VisibilityCheckBox" Content="Visible" Margin="0,10,0,0" Checked="VisibilityCheckBox_Changed" Unchecked="VisibilityCheckBox_Changed"/>
                </StackPanel>
            </GroupBox>

            <!-- Generate Assembly Section -->
            <GroupBox Header="3. Generate Assembly" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <TextBlock Text="Output File:" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="OutputPathTextBox" Height="30" Padding="5" IsReadOnly="False" Background="White"/>
                        <Button Grid.Column="1" Content="Browse..." Click="BrowseOutput_Click" Height="30" Margin="5,0,0,0" Background="#666666" Foreground="White" Padding="10,0"/>
                    </Grid>
                    <Button Content="Generate Assembly" Click="GenerateAssembliesButton_Click" Height="40" Margin="0,10,0,0" Background="#00AA00" Foreground="White" FontWeight="Bold" FontSize="12"/>
                </StackPanel>
            </GroupBox>

            <!-- Status -->
            <TextBlock x:Name="StatusText" Text="Ready" Margin="0,10,0,0" Foreground="#666666" TextWrapping="Wrap" FontSize="11"/>
        </StackPanel>

        <!-- Right Panel: Log/Info -->
        <StackPanel Grid.Column="1" Margin="15" Orientation="Vertical">
            <TextBlock Text="Execution Log" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="LogListBox" Background="White" BorderBrush="#CCCCCC" BorderThickness="1"/>
        </StackPanel>
        
    </Grid>
</Window>